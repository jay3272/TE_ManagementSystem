@model TE_ManagementSystem.Models.Employee

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<div class="login-box">

    <div class="login-box-body">
        <div class="login-logo">
            <img src="~/Content/Img/TailynLogo_2021.jpg" />
            <h3><b>Tailyn Management System</b></h3>
        </div>
        <p class="login-box-msg">Sign in to start your session</p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group has-feedback">
                @Html.LabelFor(model => model.Opid, htmlAttributes: new { @class = "col-xl-10 control-label" })

                @Html.EditorFor(model => model. Opid, new { htmlAttributes = new { @class = "form-control", @placeholder = "Login" } })
                @Html.ValidationMessageFor(model => model.Opid, "", new { @class = "text-danger" })
                <span class="glyphicon glyphicon-user form-control-feedback"></span>

            </div>

            <div class="form-group has-feedback">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-xl-10 control-label" })

                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" } })
                <input type="checkbox" onclick="showPsw()">Show Password
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <div style="color:red">@TempData["message"]</div>

            </div>

            <div class="form-group">
                <div class="col-xl-offset-2 col-xl-12">
                    <input type="submit" value="Login" class="btn btn-group-justified btn-info btn-lg" />
                </div>
            </div>
        }
    </div>
</div>

<script>
    document.getElementById('Login').focus();

    function showPsw() {
        var x = document.getElementById("Password");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
