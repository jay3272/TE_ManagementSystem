@model IEnumerable<TE_ManagementSystem.Models.LabelRule>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_index.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        編碼標籤查詢表
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="display nowrap dataTable" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            製程名稱
                        </th>
                        <th>
                            種類名稱
                        </th>
                        <th>
                            標籤條碼
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.KindProcess.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Kind.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LabelRule1)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<script>

    $(document).ready(function () {
        $('#dataTable').DataTable({
            pagingType: 'full_numbers',
            order: [[0, 'asc']],
        });
    });

</script>


@if (TempData["message"] != null)
{
    <script type="text/javascript">
            var message = @Html.Raw(Json.Encode(TempData["message"]));
            alert(message);
    </script>
}
